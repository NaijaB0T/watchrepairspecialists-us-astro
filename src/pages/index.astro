---
import Layout from '../layouts/Layout.astro';
import SpecialistSearch from '../components/SpecialistSearch.astro';
import StateCityList from '../components/StateCityList.astro';
---

<Layout title="Watch Repair Specialists - Find Experts Near You">
  <div class="py-16 md:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-extrabold tracking-tight lg:text-5xl">
        Find Trusted Watch Repair Specialists Near You
      </h1>
      <p class="mt-6 text-lg text-muted-foreground max-w-2xl mx-auto">
        From simple battery replacements to complex mechanical restorations, we connect you with the best watch repair professionals in your area.
      </p>
      <div class="mt-8 max-w-md mx-auto">
        <SpecialistSearch />
      </div>
    </div>
  </div>

  <div class="py-16 md:py-24 bg-muted/40">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight">How It Works</h2>
        <p class="mt-4 text-lg text-muted-foreground">
          Find the right specialist in just a few clicks.
        </p>
      </div>
      <div class="mt-12 grid gap-8 md:grid-cols-3">
        <div class="text-center">
          <h3 class="text-xl font-semibold">1. Search</h3>
          <p class="mt-2 text-muted-foreground">
            Enter your city or browse by state to find specialists near you.
          </p>
        </div>
        <div class="text-center">
          <h3 class="text-xl font-semibold">2. Compare</h3>
          <p class="mt-2 text-muted-foreground">
            View detailed profiles, services offered, and customer reviews.
          </p>
        </div>
        <div class="text-center">
          <h3 class="text-xl font-semibold">3. Connect</h3>
          <p class="mt-2 text-muted-foreground">
            Contact the specialist of your choice directly to schedule a repair.
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="py-16 md:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight">Browse by Location</h2>
        <p class="mt-4 text-lg text-muted-foreground">
          Explore our directory of watch repair specialists by state and city.
        </p>
      </div>
      <div class="mt-12">
        <StateCityList />
      </div>
    </div>
  </div>
</Layout>
